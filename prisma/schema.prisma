datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/selecao-globo?schema=public"
}

generator client {
  provider = "prisma-client-js"
}

model Candidate {
  id     Int    @id @default(autoincrement())
  name   String
  votate Vote?
}

model Vote {
  id          Int       @id @default(autoincrement())
  votesCount  Int
  candidate   Candidate @relation(fields: [candidateId], references: [id])
  candidateId Int
  votation    Votation  @relation(fields: [votationId], references: [id])
  votationId  Int
}

model Votation {
  id      Int    @id @default(autoincrement())
  votate  Vote[]
  votates Int[]
}
